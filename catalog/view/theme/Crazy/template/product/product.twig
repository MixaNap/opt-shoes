    function updateActualQuantity() {
      if (isPackProduct && packSize > 0) {
        var packs = parseInt($('input[name="quantity_packs"]').val()) || 1;
        if (packs < 1) packs = 1;
        var actualQty = packs * packSize;
        $('#quantity-actual').val(actualQty);
      }
    }
    
    // Функція для розрахунку та відображення вартості
    function updateTotalPrice() {
      var priceBlock = $('#quantity-total-price');
      var sellByPack = parseInt(priceBlock.data('sell-by-pack')) || 0;
      var packSize = parseInt(priceBlock.data('pack-size')) || 0;
      var pricePerPack = parseFloat(priceBlock.attr('data-price-per-pack')) || 0;
      var pricePerUnit = parseFloat(priceBlock.attr('data-price-per-unit')) || 0;
      
      // Відлагодження
      console.log('Debug: sellByPack=', sellByPack, 'packSize=', packSize, 'pricePerPack=', pricePerPack, 'pricePerUnit=', pricePerUnit);
      
      var quantity = 0;
      if (sellByPack && packSize > 0) {
        // Для товарів що продаються упаковками: беремо кількість упаковок
        quantity = parseInt($('input[name="quantity_packs"]').val()) || 1;
      } else {
        // Для товарів що продаються поштучно
        quantity = parseInt($('#input-quantity').val()) || 1;
        if (quantity < 1) quantity = 1;
      }
      
      console.log('Debug: quantity=', quantity);
      
      if (quantity > 0) {
        var totalPrice = 0;
        
        if (sellByPack && packSize > 0) {
          // Для товарів що продаються упаковками
          if (pricePerPack > 0) {
            // Використовуємо ціну за упаковку
            totalPrice = pricePerPack * quantity;
            console.log('Debug: Using pricePerPack:', pricePerPack, '* quantity:', quantity, '=', totalPrice);
          } else {
            // Якщо ціна за упаковку не встановлена, використовуємо ціну за пару * розмір упаковки
            totalPrice = (pricePerUnit * packSize) * quantity;
            console.log('Debug: Using pricePerUnit * packSize:', pricePerUnit, '*', packSize, '* quantity:', quantity, '=', totalPrice);
          }
        } else {
          // Для товарів що продаються поштучно
          if (pricePerUnit > 0) {
            totalPrice = pricePerUnit * quantity;
            console.log('Debug: Using pricePerUnit:', pricePerUnit, '* quantity:', quantity, '=', totalPrice);
          } else if (pricePerPack > 0) {
            // Fallback: якщо pricePerUnit не встановлено, використовуємо pricePerPack
            totalPrice = pricePerPack * quantity;
            console.log('Debug: Using pricePerPack (fallback):', pricePerPack, '* quantity:', quantity, '=', totalPrice);

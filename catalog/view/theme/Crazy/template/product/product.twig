      // Перевірка мінімального та максимального значення
      if (valueCurrent < minValue) {
        valueCurrent = minValue;
        $(this).val(minValue);
      }
      if (valueCurrent > maxValue) {
        valueCurrent = maxValue;
        $(this).val(maxValue);
      }
      
      // Оновлюємо disabled для кнопок
      if (valueCurrent <= minValue) {
        $(".btn-number[data-type='minus']").attr('disabled', true);
      } else {
        $(".btn-number[data-type='minus']").removeAttr('disabled');
      }
      
      // Оновлюємо фактичну кількість та вартість
      updateActualQuantity();
      updateTotalPrice();

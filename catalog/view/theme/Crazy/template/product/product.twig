      }
      
      var currentVal = parseInt(input.val()) || 1;
      var minValue = 1;
      var maxValue = 999;
      
      if (!isNaN(currentVal)) {
        if (type == 'minus') {
          if (currentVal > minValue) {
            input.val(currentVal - 1).change();
          }
          // Оновлюємо disabled для кнопки мінус
          if (parseInt(input.val()) <= minValue) {
            $(".btn-number[data-type='minus']").attr('disabled', true);
          } else {
            $(".btn-number[data-type='minus']").removeAttr('disabled');
          }
        } else if (type == 'plus') {
          if (currentVal < maxValue) {
            input.val(currentVal + 1).change();
          }
          // Оновлюємо disabled для кнопки мінус (якщо кількість > 1, то мінус активна)
          if (parseInt(input.val()) > minValue) {
            $(".btn-number[data-type='minus']").removeAttr('disabled');
          }
        }
      } else {
        input.val(minValue);
      }
      
      // Оновлюємо фактичну кількість та вартість
      updateActualQuantity();

{{ header }}
<div id="checkout-cart" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
 
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <h1 class="page-title">{{ heading_title }}</h1>
       {% if attention %}
      <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ attention }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
      {% endif %}
      {% if success %}
      <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
      {% endif %}
      {% if error_warning %}
      <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
      {% endif %}
{# responsive #}
      <form action="{{ action }}" method="post" enctype="multipart/form-data">
        {% for product in products %}
        <table class="table table-bordered shopping-cart responsive">
        <tr><td class="text-center">{{ column_image }}</td>
          <td class="text-center">{% if product.thumb %} <a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-thumbnail" /></a> {% endif %}</td></tr>
         <tr>
        <td class="text-center">{{ column_name }}</td>
        <td class="text-center"><a href="{{ product.href }}">{{ product.name }}</a> {% if not product.stock %} <span class="text-danger">***</span> {% endif %}
                      {% if product.option %}
                      {% for option in product.option %} <br />
                      <small>{{ option.name }}: {{ option.value }}</small> {% endfor %}
                      {% endif %}
                      {% if product.reward %} <br />
                      <small>{{ product.reward }}</small> {% endif %}
                      {% if product.recurring %} <br />
                      <span class="label label-info">{{ text_recurring_item }}</span> <small>{{ product.recurring }}</small> {% endif %}</td></tr>
        <tr><td class="text-center">{{ column_model }}</td><td class="text-center">{{ product.model }}</td></tr>
        <tr><td class="text-center">{{ column_quantity }}</td>
    <td class="text-center"><div class="input-group btn-block" style="max-width: 200px;">
                      {# Перевіряємо чи товар продається упаковками #}
                      {% if product.quantity_packs is defined and product.quantity_packs > 0 %}
                        {% set packs_count = product.quantity_packs %}
                        {% set pack_word = 'упаковка' %}
                        {% if packs_count > 1 and packs_count < 5 %}
                          {% set pack_word = 'упаковки' %}
                        {% elseif packs_count >= 5 %}
                          {% set pack_word = 'упаковок' %}
                        {% endif %}
                        <input type="text" name="quantity[{{ product.cart_id }}]" value="{{ packs_count }}" size="1" class="form-control" />
                        <span style="display: block; font-size: 0.85em; color: #666; margin-top: 5px;">
                          ({{ product.quantity }} шт. = {{ packs_count }} {{ pack_word }})
                        </span>
                      {% elseif product.sell_by_pack is defined and product.sell_by_pack and product.pack_size is defined and product.pack_size > 0 %}
                        {% set calculated_packs = (product.quantity / product.pack_size)|round(0, 'floor') %}
                        {% if calculated_packs < 1 and product.quantity > 0 %}{% set calculated_packs = 1 %}{% endif %}
                        {% set pack_word = 'упаковка' %}
                        {% if calculated_packs > 1 and calculated_packs < 5 %}
                          {% set pack_word = 'упаковки' %}
                        {% elseif calculated_packs >= 5 %}
                          {% set pack_word = 'упаковок' %}
                        {% endif %}
                        <input type="text" name="quantity[{{ product.cart_id }}]" value="{{ calculated_packs }}" size="1" class="form-control" />
                        <span style="display: block; font-size: 0.85em; color: #666; margin-top: 5px;">
                          ({{ product.quantity }} шт. = {{ calculated_packs }} {{ pack_word }})
                        </span>
                      {% else %}
                        <input type="text" name="quantity[{{ product.cart_id }}]" value="{{ product.quantity }}" size="1" class="form-control" />
                      {% endif %}
                      <span class="input-group-btn">
                      <button type="submit"  title="{{ button_update }}" class="btn btn-primary"><i class="fa fa-refresh"></i></button>
                      <button type="button" title="{{ button_remove }}" class="btn btn-danger" onclick="cart.remove('{{ product.cart_id }}');"><i class="fa fa-times-circle"></i></button>
                      </span></div></td></tr>
                  <tr>
                  <td class="text-center">{{ column_price }}</td>
                  <td class="text-center">
                    {% if product.quantity_packs is defined and product.quantity_packs > 0 %}
                      {% if product.price_per_pack is defined and product.price_per_pack %}
                        {{ product.price_per_pack }} <span style="font-size: 0.85em; color: #666;">(за упаковку {{ product.pack_size }} шт.)</span>
                        {% if product.price_per_unit_formatted is defined and product.price_per_unit_formatted %}
                          <br><span style="font-size: 0.8em; color: #999;">Одна штука: {{ product.price_per_unit_formatted }}</span>
                        {% endif %}
                      {% else %}
                        {{ product.price }}
                      {% endif %}
                    {% elseif product.sell_by_pack is defined and product.sell_by_pack and product.pack_size is defined and product.pack_size > 0 %}
                      {% if product.price_per_pack is defined and product.price_per_pack %}
                        {{ product.price_per_pack }} <span style="font-size: 0.85em; color: #666;">(за упаковку {{ product.pack_size }} шт.)</span>
                        {% if product.price_per_unit_formatted is defined and product.price_per_unit_formatted %}
                          <br><span style="font-size: 0.8em; color: #999;">Одна штука: {{ product.price_per_unit_formatted }}</span>
                        {% endif %}
                      {% else %}
                        {{ product.price }}
                      {% endif %}
                    {% else %}
                      <!-- DEBUG: product.price={{ product.price }}, sell_by_pack={{ product.sell_by_pack|default('N/A') }}, pack_size={{ product.pack_size|default('N/A') }} -->
                      {{ product.price }}
                    {% endif %}
                  </td>
                  </tr>
                  <tr>
                  <td class="text-center">{{ column_total }}</td>
                  <td class="text-center total">{{ product.total }}</td>
                  </tr>
                  </table>
                  {% endfor %}

                  {% for voucher in vouchers %}
                   <table class="table table-bordered shopping-cart responsive">
                    <tr><td class="text-center">{{ column_name }}</td>
                <td class="text-center">{{ voucher.description }}</td></tr>

                <tr> <td class="text-center">{{ column_quantity }}</td>
                <td class="text-center"><div class="input-group btn-block" style="max-width: 200px;">
                    <input type="text" name="" value="1" size="1" disabled="disabled" class="form-control" />
                    <span class="input-group-btn">
                  <button type="button"  title="{{ button_remove }}" class="btn btn-danger" onClick="voucher.remove('{{ voucher.key }}');"><i class="fa fa-times-circle"></i></button>
                    </span></div></td></tr>

                    <tr>
                  <td class="text-center">{{ column_price }}</td>
                  <td class="text-center">{{ voucher.amount }}</td>
                  </tr>
                  <tr>
                  <td class="text-center">{{ column_total }}</td>
                  <td class="text-center">{{ voucher.amount }}</td>
                  </tr>

                   </table>
                     {% endfor %}
</form>
